@{
    ViewBag.Title = "Home Page";
}
@model AnjularJS.ViewModel.IndexViewModel
<!doctype html>
<html ng-app="employApp">
    <head>
   
        <script src="~/Scripts/angular.js"></script>
    </head>

    <body >
        <br><br><br>
        @*=============================List=============================*@
        <div class="row">
            <div class="col-lg-6">
                <div class="input-group">
                    <span class="input-group-btn">
                        <button class="btn btn-default custom_btn" type="button" data-toggle="modal" data-target="#myAddModal" id="CreateNew">Create New</button>
                        

                    </span>

                </div>
            </div>
            <div class="col-lg-6">
                <div class="input-group">
                    <input type="text" id="SearchName" class="form-control" placeholder="Search">
                    <span class="input-group-btn">
                        <button class="btn btn-default" id="Search" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>
        <div ng-controller="EmployeeListCtrl">
            <table class="table table-striped table-bordered table-condensed">
                <tr id="tr_0">
                    <th>Number</th>
                    <th>Name</th>
                    <th>BirthDay</th>
                    <th>School</th>
                    <th>Address</th>
                    <th>WorkExperience</th>
                    <th>operate</th>
                </tr>


                <tr id="tr_0" ng-repeat="employ in employs">
                    <th>{{$index+1}}</th>
                    <th>{{employ.Name}}</th>
                    <th>{{employ.BirthDay}}</th>
                    <th>{{employ.School}}</th>
                    <th>{{employ.Address}}</th>
                    <th>{{employ.WorkExperience}}</th>
                    <th>operate</th>
                </tr>

            </table>
            
            <div class="modal fade" id="myAddModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title" id="myModalLabel">Add Staff</h4>
                        </div>
                        <div class="modal-body">
                            <form role="form" id="StaffForm">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label class="control-label">Name</label>
                                        <input type="text" class="form-control" ng-model="user.name" placeholder="Enter Name">
                                    </div>
                                    <div class="col-md-6">
                                        <label class="control-label">BirthDay</label>
                                        <input type="date" value="" class="form-control" ng-model="user.birthDay">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>School</label>
                                        <input type="text" class="form-control" ng-model="user.school" placeholder="Enter School">
                                    </div>
                                    <div class="col-md-6">
                                        <label>Address</label>
                                        <input type="text" class="form-control" ng-model="user.address" placeholder="Enter Address">
                                    </div>
                                </div>

                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" id="Add" ng-click="save()" class="btn btn-default">Submit</button>
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    

    </body>
</html>
@*=============================add=============================*@

<script type="text/javascript">
    var TodoApp = angular.module("employApp", []);
    TodoApp.controller("EmployeeListCtrl", function($scope, $http) {
        $http.get("/Home/Get").success(function(data) {
            $scope.employs = data;
        });
        $scope.save = function () {
            $http.post("/Home/Add", $scope.user);
        };
    });

//    $scope.save = function (saveUserModel) {
//        $http.post("/Home/Add",saveUserModel);
//    };

</script>